<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:background="@drawable/cards">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:id="@+id/item_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rec_view_event_name"
            android:layout_below="@id/item_img"
            android:text="Loading....."
            android:fontFamily="@font/lato_italic"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rec_view_event_type"
            android:text="Please Wait...."
            android:layout_marginTop="2dp"
            android:fontFamily="@font/lato_italic"
            android:textSize="18dp"
            android:layout_below="@id/rec_view_event_name"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rec_view_user_email_text"
            android:text="Posted by"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_italic"
            android:textSize="15dp"
            android:layout_below="@id/item_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rec_view_user_email"
            android:text="Please Wait...."
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_italic"
            android:textSize="15dp"
            android:layout_below="@id/rec_view_user_email_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
